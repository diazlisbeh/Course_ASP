@{
    ViewData["Title"] = "Escuela";
}
<link href="SchoolIndex.css" rel="stylesheet" type="text/css" />

<h1>Todas las escuelas</h1>

@foreach (var item in Model)
{
    <div class="card card-container" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-tittle">@item.Name</h5>
            <p class="card-text">@item.Country</p>
            <p class="card-text">@item.TypeSchool</p>
            <p class="card-text">@item.Id</p>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Edit
</button>
            <button type="button" class="btn btn-danger">Delete</button>
        </div>
    </div>
    
}
<button type="button" class="btn btn-primary" ><a asp-action="Create" asp-controller="School">Crear</a></button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
